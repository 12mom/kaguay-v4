if (body === "!الترتيب" || body === "!top") {
  const top = getLeaderboard();
  let reply = "🏅 *أقوى 10 في snfor* 🏅\n──────────────────────\n";
  top.forEach(p => {
    reply += `#${p.rank} ${p.name} | ${p.level} | ${p.xp} XP\n`;
  });
  reply += "──────────────────────\n🔥 أحبكم يا سنافري!";
  message.reply(reply);
}
